#include "_keynodes.scsy"
#include "scp_keynodes.scsy"
#include "com_keynodes.scsy"
#include "lib_search.scsy"

/*!
	Procedure to find identifiers for specified element
	
	@result	Result contains identifiers set and binary pair (identification relation)
*/
procedure(identifiers,
[[	
	search_base_rel_in_with_sheaf;
	nrel_identification = "идентификация*";
]],
[{
	// input params
	element,
	// output params
	result,
	// other variables
	descr
}],
{[
	1_: in_: element,	// element to search identifiers
	2_: in_: result	// all founded elements will be append into this set (set must be existing)
]}
)

callReturn([
	1_: fixed_: search_base_rel_in_with_sheaf,
	2_: fixed_: {[
		1_: element,
		2_: nrel_identification,
		3_: result]}
	])
	
return()
end()
